{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "outDir": "./dist",
        "paths": {
            "@/*": ["./src/*"],
            "@shared/*": ["../shared/*"]
        }
    },
    "include": ["src", "../shared"],
    "exclude": ["node_modules"]
}
